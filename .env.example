# ===========================================
# PokerKit Holdem - Environment Variables
# ===========================================
# Copy this file to .env and modify as needed
# cp .env.example .env

# ----- Application -----
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=json
# Uvicorn Workers (프로덕션: CPU 코어 수 * 2 + 1 권장)
# 멀티 워커 사용 시 WebSocket Sticky Session 또는 Redis Pub/Sub 필요
UVICORN_WORKERS=1             # 개발: 1, 프로덕션: 4-8 (8코어 기준)

# ----- Database (PostgreSQL) -----
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pokerkit
# Connection Pool Settings (300-500명 동시 접속 대응)
DB_POOL_SIZE=50              # 기본 풀 크기 (개발: 10, 프로덕션: 50)
DB_MAX_OVERFLOW=30           # 최대 추가 연결 (개발: 20, 프로덕션: 30)
DB_POOL_TIMEOUT=30           # 연결 대기 타임아웃 (초)
DB_POOL_RECYCLE=1800         # 연결 재사용 주기 (30분)

# Docker PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pokerkit
POSTGRES_PORT=5432

# ----- Redis -----
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SESSION_TTL=86400
# Connection Pool Settings (300-500명 동시 접속 대응)
REDIS_MAX_CONNECTIONS=100        # 최대 연결 수 (프로덕션: 100)
REDIS_SOCKET_TIMEOUT=5.0         # 소켓 타임아웃 (초)
REDIS_SOCKET_CONNECT_TIMEOUT=5.0 # 연결 타임아웃 (초)
REDIS_HEALTH_CHECK_INTERVAL=30   # 헬스체크 간격 (초)

# ----- Authentication -----
# IMPORTANT: Change these in production!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=3
SESSION_SECRET_KEY=dev-session-secret-change-in-production

# ----- Serialization Security -----
# HMAC key for internal state integrity verification
# Generate with: openssl rand -hex 32
SERIALIZATION_HMAC_KEY=dev-hmac-key-change-in-production-use-strong-random

# ----- CORS -----
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# ----- Game Settings -----
DEFAULT_MAX_SEATS=6
DEFAULT_SMALL_BLIND=10
DEFAULT_BIG_BLIND=20
DEFAULT_BUY_IN_MIN=400
DEFAULT_BUY_IN_MAX=2000
TURN_TIMEOUT=30
RECONNECT_GRACE_PERIOD=60
HEARTBEAT_INTERVAL=15

# ----- WebSocket Connection Limits (300-500명 동시 접속 대응) -----
WS_MAX_CONNECTIONS=600           # 인스턴스당 최대 연결 수
WS_MAX_CONNECTIONS_PER_USER=3    # 사용자당 최대 연결 수 (멀티 디바이스)

# ----- Rate Limiting -----
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
WS_RATE_LIMIT_MESSAGES=50
WS_RATE_LIMIT_WINDOW=10

# ----- Frontend (Next.js) -----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_SPECTATOR=true
NEXT_PUBLIC_ENABLE_HAND_HISTORY=true

# ----- Internal (SSR) -----
INTERNAL_API_URL=http://backend:8000
